{
    "compilerOptions": {
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "declaration": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "suppressImplicitAnyIndexErrors": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "target": "es6",
      "rootDir": ".",
      "outDir": "dist",
      "baseUrl": ".",
    },
    "files": [
        "index.d.ts"
    ],
    "formatCodeOptions": {
      "indentSize": 2,
      "tabSize": 2
    },
    "exclude": [
      "node_modules"
  ]
  }