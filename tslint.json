{
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "src/types/index.d.ts"
        ]
    },
    "rulesDirectory": [
        "./node_modules/codelyzer"
    ],
    "rules": {
        // Custom
        "trailing-comma": [
            false,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "interface-name": [
            false,
            "always-prefix"
        ],
        "max-classes-per-file": [true, 6],
        // General
        "array-type": false,
        "prefer-for-of": false,
        "member-access": false,
        "no-console": [
            true,
            "time",
            "timeEnd",
            "trace"
        ],
        "forin": false,
        "max-line-length": false,
        "no-string-literal": false,
        "no-use-before-declare": true,
        "object-literal-sort-keys": false,
        "object-literal-shorthand": false,
        "ordered-imports": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "variable-name": [
            true,
            "allow-leading-underscore",
            "allow-pascal-case",
            "ban-keywords",
            "check-format"
        ]
    }
}